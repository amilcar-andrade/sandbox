<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/animate_visibility_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/animate_visibility" />

    <Button
        android:id="@+id/animate_layout_params_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/animate_layout_params" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_view_height"
        android:background="@android:color/holo_orange_dark"
        android:layout_margin="@dimen/color_view_margin"/>

    <View
        android:id="@+id/blue_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_view_height"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="@dimen/color_view_margin"/>

    <View
        android:id="@+id/green_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_view_height"
        android:background="@android:color/holo_green_dark"
        android:layout_margin="@dimen/color_view_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_view_height"
        android:background="@android:color/holo_red_dark"
        android:layout_margin="@dimen/color_view_margin"/>

</LinearLayout>